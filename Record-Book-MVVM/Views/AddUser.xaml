<Window x:Class="Change_Button_Color.Views.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Change_Button_Color.Views"
        mc:Ignorable="d"
        Title="AddUser" Height="450" Width="400">
    <Grid>
        <Label Content="Name" Margin="25" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox TextWrapping="Wrap" Text="TextBox" Height="30" Width="200" Margin="25,50" VerticalAlignment="Top"
                 HorizontalAlignment="Left" BorderThickness="1" />
        
        <Label Content="Email" Margin="25,100" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox TextWrapping="Wrap" Text="TextBox" Height="30" Width="200" Margin="25,125" VerticalAlignment="Top" HorizontalAlignment="Left" BorderThickness="1"/>
        <Button Content="Add" Height="30" Width="70" VerticalContentAlignment="Center" Padding="5" Margin=" 25" VerticalAlignment="Bottom" />


    </Grid>
</Window>
