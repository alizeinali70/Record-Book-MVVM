<Window x:Class="Change_Button_Color.Views.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Change_Button_Color.Views"
        mc:Ignorable="d"
        Title="Main" Height="650" Width="1000">
    <Grid>
        <Grid Grid.Row="1" Margin="5,5,5,5">
            <TextBox x:Name="FilterTextBox" TextWrapping="Wrap" Width="200" Height="30" Margin="5,10,750,580"/>
            <Button Height="30" Width="100" Content="Add User" VerticalContentAlignment="Center" Padding="5" Margin="690,10,5,580"/>
            <ListView Name="UserList" BorderBrush="#cdcdcd" Margin="25,70,25,25" d:ItemsSource="{d:SampleData ItemCount=5}" Padding="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name"/>
                        <GridViewColumn Header="Email"/>
                    </GridView>
                </ListView.View>
            </ListView>



        </Grid>
    </Grid>
</Window>
